# Production Environment Variables Template
# Copy this file to .env.prod and replace placeholder values

# Django Settings
LEARN_OPS_DJANGO_SECRET_KEY="replace_with_secure_secret_key"
DEBUG=False
DEVELOPMENT_MODE=False
LEARN_OPS_ALLOWED_HOSTS="learning.nss.team,api.learning.nss.team,your-domain.com"

# Database Configuration
LEARN_OPS_DB=learning_platform_prod
LEARN_OPS_USER=learning_user
LEARN_OPS_PASSWORD=secure_database_password
LEARN_OPS_HOST=postgres
LEARN_OPS_PORT=5432

# GitHub OAuth Configuration
LEARN_OPS_CLIENT_ID=your_github_oauth_client_id
LEARN_OPS_SECRET_KEY=your_github_oauth_secret
LEARNING_GITHUB_CALLBACK=https://your-domain.com/auth/github

# Superuser Configuration
LEARN_OPS_SUPERUSER_NAME=admin
LEARN_OPS_SUPERUSER_PASSWORD=secure_admin_password

# Redis/Valkey Configuration
VALKEY_HOST=valkey
VALKEY_PORT=6379
VALKEY_DB=0

# Slack Integration (Optional)
SLACK_TOKEN=your_slack_bot_token

# Docker Registry (for deployment)
DOCKER_REGISTRY=ghcr.io
GITHUB_REPOSITORY=your-username/learning-platform-api
IMAGE_TAG=latest